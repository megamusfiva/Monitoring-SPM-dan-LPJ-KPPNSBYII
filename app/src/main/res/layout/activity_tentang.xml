<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informasi.TentangActivity">
    <androidx.appcompat.widget.Toolbar
        app:title="Tentang KPPN II SBY"
        android:id="@+id/toolbarKontak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deeppurple"
        android:minHeight="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarKontak"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textContactus"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Tentang Kami"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textContactus"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#dddddd"/>

            <ImageView
                android:id="@+id/logoTravel"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textContactus"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/logo_kppn"/>

            <TextView
                android:id="@+id/forwardKontak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logoTravel"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:text="Kantor Pelayanan Perbendaharaan Negara SurabaYA II"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_below="@id/forwardKontak"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text=" Kantor Pelayanan Perbendaharaan Negara (KPPN) adalah lembaga yang ditunjuk oleh pemerintah untuk mengelola pengeluaran yang sudah diatur dalam APBN. Salah satu pengeluaran yang wajib dibayarkan adalah pembayaran gaji induk kepada para Pegawai Negeri Sipil."
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/alamat1"
                    android:layout_below="@id/deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Alamat :"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/alamat1Kontak"
                    android:layout_below="@id/alamat1"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Jl. Dinoyo No. 111, Keputran"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/alamat2Kontak"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_below="@id/alamat1Kontak"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Kec. Tegalsari, Kota Surabaya"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/alamat3Kontak"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_below="@id/alamat2Kontak"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Jawa Timur 60265"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020 Mega Afyda Some Rights Reserved ">
    </TextView>


</RelativeLayout>