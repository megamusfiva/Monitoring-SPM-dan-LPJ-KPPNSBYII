<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99D8D8D8"
    tools:context=".Main.LoginActivity">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_marginRight="40dp"
        android:background="@drawable/sp_rectangle_kotak"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="20dp"
            android:id="@+id/kdsatker"
            android:hint="Kode Satker"
            android:inputType="number"
            android:maxLength="6"
            android:backgroundTint="#99D4D8DC"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <View
            android:id="@+id/v_saparator"
            android:background="#99D4D8DC"
            android:layout_below="@id/kdsatker"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <EditText
            android:id="@+id/ed_nama"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:drawablePadding="20dp"
            android:layout_below="@id/v_saparator"
            android:hint="Nama Satker"
            android:backgroundTint="#99D4D8DC"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <View
            android:id="@+id/v_pe"
            android:background="#99D4D8DC"
            android:layout_below="@id/ed_nama"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <EditText
            android:id="@+id/ed_tlp"
            android:layout_below="@id/v_pe"
            android:hint="No. Telepon"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="20dp"
            android:inputType="number"
            android:paddingLeft="30dp"
            android:backgroundTint="#99D4D8DC"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <View
            android:id="@+id/v_te"
            android:background="#99D4D8DC"
            android:layout_below="@id/ed_tlp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <EditText
            android:id="@+id/ed_email"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="20dp"
            android:layout_below="@id/v_te"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#99D4D8DC"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <View
            android:id="@+id/v_ep"
            android:background="#99D4D8DC"
            android:layout_below="@id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <EditText
            android:id="@+id/ed_pass"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="20dp"
            android:layout_below="@id/v_ep"
            android:hint="Password"
            android:inputType="textPassword"
            android:backgroundTint="#99D4D8DC"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_regist"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/tv_regist"
        android:layout_above="@+id/rl"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Register" />
    <Button
        android:id="@+id/btm_login"
        android:layout_marginTop="40dp"
        android:layout_above="@id/tv_regist"
        android:text="Login"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sp_rectangle_login"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020 Mega Afyda Some Rights Reserved ">
    </TextView>
</RelativeLayout>