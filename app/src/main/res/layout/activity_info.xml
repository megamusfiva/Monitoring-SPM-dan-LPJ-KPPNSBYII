<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informasi.InfoActivity">
    <androidx.appcompat.widget.Toolbar
        app:title="Informasi"
        android:id="@+id/toolbarinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deeppurple"
        android:minHeight="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/logoTravel"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarinfo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/logo_kppn"/>
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_below="@+id/logoTravel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KPPN Surabaya II"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/black">
        </TextView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/rl_1"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_view_headline_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Tentang KPPN SBY II"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:text="Lihat Tentang KPPN II SBY"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="22dp"
            android:text=">"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textAlignment="textEnd"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/akun1"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_contact_phone_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Kontak Kami"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:text="Hubungi Kami"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="22dp"
            android:text=">"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textAlignment="textEnd"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/akun2"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_description_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Tentang SPM dan LPJ"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:text=" Lihat Syarat dan Ketentuan"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="22dp"
            android:text=">"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textAlignment="textEnd"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/akun3"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_android_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Versi App"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="1.0.0"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020 Mega Afyda Some Rights Reserved ">
    </TextView>
</RelativeLayout>